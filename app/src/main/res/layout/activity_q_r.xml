<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.GrayFabric.RackIn.GrayFebricScanActivity">


    <Button
        android:id="@+id/buttonScanRoll"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/capsule_shape"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_margin="@dimen/spacing_xlarge"
        android:text="Scan Roll" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/rootLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="6dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRoll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </androidx.cardview.widget.CardView>
    </ScrollView>

    <Button
        android:id="@+id/buttonScanQRCode"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/capsule_shape"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_margin="@dimen/spacing_xlarge"
        android:text="Scan Rack" />


</LinearLayout>